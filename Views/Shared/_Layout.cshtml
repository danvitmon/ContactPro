<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trackr</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContactPro.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (!User.Identity!.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Trackr</a>
                }
                else
                {

                    <a class="navbar-brand nav-link dropdown-toggle" data-bs-toggle="dropdown">Trackr</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-area="" asp-controller="Contacts" asp-action="Index">My Tracking</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">Accessories</a>
                    </div>
                }



                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i></a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="content" id="mainHero">
        <section class="container h-100">
            @RenderBody()
        </section>
    </div>

    <footer class="footer container-fluid">
        <div class="row align-items-center py-2">
            <div class="col">
                <div class="row align-items-center gy-2">
                    <div class="col d-flex justify-content-center justify-content-md-start order-last order-md-first copyright">
                        &copy; @DateTime.Now.Year Coder Foundry All Rights Reserved
                    </div>
                    <div class="col d-flex justify-content-center">
                        <img src="" height="50" />
                    </div>
                    <div class="col-12 col-md d-flex justify-content-center justify-content-md-end">
                        <a href="https://www.linkedin.com/" class="socialicons"><i class="bi-linkedin p-2"></i></a>
                        <a href="https://www.twitter.com/" class="socialicons"><i class="bi-twitter p-2"></i></a>
                        <a href="https://www.youtube.com/" class="socialicons"><i class="bi-youtube p-2"></i></a>
                        <a href="https://www.instagram.com/" class="socialicons"><i class="bi-instagram p-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
