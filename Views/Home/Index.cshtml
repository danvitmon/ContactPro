@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-12 col-md-6">
        <div class="m-5">
            <h1 class="heroTitle">Keeping <span class="texthighlight">Track</span> of your day</h1>
            <div class="subtitle">
                Organize your day by keeping track of what needs to be done
                Experience the power of Trackr today.
                <br />
                <br />

                <strong>Built with pride using cutting edge tech:</strong>
                <br />
                @* Show techs here *@
                <div class="d-flex align-items-center mt-3">
                    <figure>
                        <img src="https://devicons.railway.app/i/dot-net.svg" class="imgicon" />
                        <figcaption>ASP.NET</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/csharp.svg" class="imgicon" />
                        <figcaption>C#</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/postgresql.svg" class="imgicon" />
                        <figcaption>Postgres</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/bootstrap.svg" class="imgicon" />
                        <figcaption>Bootstrap</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/railway-dark.svg" class="imgicon" />
                        <figcaption>Railway</figcaption>
                    </figure>

                </div>
            </div>
        </div>

    </div>
    <div class="col-12 col-md-6">
        <img src="~/img/Checklist-pana.png" class="img-fluid" />
    </div>

    <div class="col-12">
        <div class="row mt-5">
            <div class="col-12 btn btn-block text-center">
                <a class="btn btn-lg btn-outline-primary rounded-pill px-3" style="height:min-content" asp-controller="Contacts" asp-action="Index">Get Started</a>
            </div>
        </div>
    </div>

</div>
